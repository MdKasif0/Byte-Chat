rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if isUser(userId);
    }
    
    // Phone numbers collection for unique phone number lookup
    match /phonenumbers/{phoneNumber} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // Chats collection
    match /chats/{chatId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.members;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.members;
      allow update: if isSignedIn() && request.auth.uid in resource.data.members;

      // Messages sub-collection
      match /messages/{messageId} {
        allow read: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
        allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
        allow update: if isSignedIn() && (
                            // Allow sender to edit their own message content
                           (resource.data.senderId == request.auth.uid && request.resource.data.content != resource.data.content) ||
                            // Allow any member to add/remove reactions or star a message
                           (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members)
                         );
        allow delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
      }
    }
    
    // Calls collection
    match /calls/{callId} {
        allow read, write: if isSignedIn() && (request.auth.uid == resource.data.callerId || request.auth.uid == resource.data.calleeId);

        match /{candidateCollection}/{candidateId} {
           allow create: if isSignedIn();
        }
    }

    // Feedback collection
    match /feedback/{feedbackId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read, update, delete: if false;
    }
  }
}